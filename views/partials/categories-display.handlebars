<div class="accordion mx-4" id="accordionCategories">
  {{#each categories}}
    <div class="accordion-item bg-dark text-info">
      <h2 class="accordion-header" id="heading-{{id}}">
        <button class="accordion-button bg-warning fw-bold" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-{{id}}" aria-expanded="true" aria-controls="collapse-{{id}}" data-id="{{id}}">
            {{name}}
        </button>
      </h2>
      <div id="collapse-{{id}}" class="accordion-collapse collapse" aria-labelledby="heading-{{id}}" data-bs-parent="#accordionCategories">
        <div class="row">
          <div class="pc-input-container d-flex col-lg-6">
            <div class="accordion-body d-flex">
              
              <div class="">
                <div class="form-inline mb-2">
                  <label for="category-{{id}}" class="me-2">ID:</label>
                  <input type="text" id="category-{{id}}" class="form-control text-warning bg-dark" value="{{id}}" data-id="{{id}}" disabled>
                </div>
                <div class="form-inline mb-2">
                  <label for="category-name-{{id}}" class="me-2">Name:</label>
                  <input type="text" id="category-name-{{id}}" class="form-control text-warning bg-dark" value="{{name}}" data-id="{{id}}" disabled>
                </div>
                <div class="form-inline mb-2">
                  <label for="product-dropdown-{{id}}" class="me-2">Associated Products:</label>
                  <select id="product-dropdown-{{id}}" class="form-select text-warning bg-dark" data-id="{{id}}">
                    <option>~ Product List ~</option>
                    {{#each ../products}}
                      {{#if (eq category_id ../id)}}
                        <option value="{{id}}">{{item_name}}</option>
                      {{/if}}
                    {{/each}}
                  </select>
                </div>
              </div>

            </div>
          </div>
          <div class="d-flex col-lg-6 align-items-start my-auto justify-content-center ">
            <button class="btn btn-warning m-3 edit-category" data-id="{{id}}">Edit</button>
            <button class="btn btn-success m-3 save-category d-none" data-id="{{id}}">Save</button>
            <button class="btn btn-warning m-3 cancel-category d-none" data-id="{{id}}">Cancel</button>
            <button class="btn btn-danger m-3 delete-category" data-id="{{id}}">Delete</button>
          </div>
        </div>
      </div>
    </div>   
  {{/each}}
</div>