<div class="accordion mx-4" id="accordionAddProduct">
  <div class="accordion-item bg-dark text-info">
    <h2 class="accordion-header" id="heading-addProduct">
      <button class="accordion-button bg-light fw-bold" type="button" data-bs-toggle="collapse" data-bs-target="#collapseAddProduct" aria-expanded="true" aria-controls="collapseAddProduct" >
          Add New Product
      </button>
    </h2>
    <div id="collapseAddProduct" class="accordion-collapse collapse" aria-labelledby="heading-addProduct" data-bs-parent="#accordionAddProduct">
      <div class="row">
        <div class="pc-input-container d-flex col-lg-6">
          <div class="accordion-body d-flex">
            
            <div class="">
              <div class="form-inline mb-2">
                <label for="add-product-name" class="me-2">Name:</label>
                <input type="text" id="add-product-name" class="form-control text-warning bg-dark" placeholder="Name">
              </div>
              <div class="form-inline mb-2">
                <label for="add-product-price" class="me-2">Price: $</label>
                <input type="text" id="add-product-price" class="form-control text-warning bg-dark" placeholder="Price">
              </div>
              <div class="form-inline mb-2">
                <label for="add-product-stock" class="me-2">Stock:</label>
                <input type="text" id="add-product-stock" class="form-control text-warning bg-dark" placeholder="Stock">
              </div>
              <div class="form-inline mb-2">
                <label for="add-category-dropdown" class="me-2">Category:</label>
                <select id="add-category-dropdown" class="form-select text-warning bg-dark">
                  <option selected>Choose a Category</option>
                  {{#each categories}}
                  <option value="{{id}}">{{name}}</option>
                  {{/each}}
                </select>
              </div>
            </div>

          </div>
        </div>
        <div class="d-flex col-lg-6 align-items-start my-auto justify-content-center ">
          <button class="btn btn-success m-3 add-product">Submit</button>
        </div>
      </div>
    </div>
  </div>
</div>