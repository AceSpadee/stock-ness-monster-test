<div class="d-grid gap-2 col-6 mx-auto">
  <button class="btn btn-warning" type="button" id="all-products">All Products</button>
  <div class="input-group mb-3">
    <input type="number" class="form-control" placeholder="Enter Product ID" id="product-id-input" aria-label="Product ID">
    <button class="btn btn-warning" type="button" id="product-by-id">Product By Id</button>
  </div>

  <button class="btn btn-warning" type="button" id="add-product">Add Product</button>
  <form id="product-form" class="d-none">
    <div class="form-group">
      <label for="product-category">Category</label>
      <select class="custom-select" id="product-category">
      <option selected>Select Category</option>
        {{#each categories}}
          <option value="{{id}}">{{name}}</option>
        {{/each}}
      </select>
    </div>
    <div class="form-group">
      <label for="product-name">Name</label>
      <input type="text" class="form-control" id="product-name" placeholder="Enter product name">
    </div>
    <div class="form-group">
      <label for="product-price">Price</label>
      <input type="text" class="form-control" id="product-price" placeholder="Enter product price">
    </div>
    <div class="form-group">
      <label for="product-stock">Stock</label>
      <input type="text" class="form-control" id="product-stock" placeholder="Enter product stock">
    </div>
    <button type="submit" class="btn btn-warning" id="product-submit">Submit</button>
  </form>
</div>

{{#each products}}
  <div class="container mt-5">
      <div class="card">
          <div class="card-header">
              <h3>{{item_name}}</h3>
          </div>
          <div class="card-body">
              <p class="card-text"><strong>ID:</strong> {{id}}</p>
              <p class="card-text"><strong>Price:</strong> ${{price}}</p>
              <p class="card-text"><strong>Stock:</strong> {{stock}}</p>
              <p class="card-text"><strong>Category:</strong> {{category_id}}</p>
              <button type="button" class="btn btn-danger delete-product" data-id="{{id}}">Delete</button>        
          </div>
      </div>
  </div>
{{/each}}

{{#if product}}
  <div class="container mt-5">
      <div class="card">
          <div class="card-header">
              <h3>{{product.item_name}}</h3>
          </div>
          <div class="card-body">
              <p class="card-text"><strong>ID:</strong> {{product.id}}</p>
              <p class="card-text"><strong>Price:</strong> ${{product.price}}</p>
              <p class="card-text"><strong>Stock:</strong> {{product.stock}}</p>
              <p class="card-text"><strong>Category:</strong> {{product.category_id}}</p>
              <button type="button" class="btn btn-danger delete-product" data-id="{{product.id}}">Delete</button>        
          </div>
      </div>
  </div>
{{/if}}  

<script src="/js/products.js"></script>
<script src="/js/categories.js"></script>
