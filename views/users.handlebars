<div class="d-flex justify-content-center">
    <h1 class="m-4">My Team</h1>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-6 col-sm-12">
            <div class="container d-flex flex-column d-grid gap-3 col-4 mx-auto">
                {{#each userData}}
                <button type="button" class="btn btn-warning btn-lg" data-bs-toggle="modal" data-bs-target="#myModal{{id}}">
                    {{first_name}} {{last_name}}
                </button>

                <div class="modal fade" id="myModal{{id}}" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="myModal{{id}}Label" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content modal-style">
                        <div class="modal-header">
                            <h2 class="modal-title fs-5" id="myModal{{id}}Label">{{first_name}} {{last_name}}</h2>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <p>Accounts: {{#each customers as |customer|}} 
                                <ul>
                                    <li>{{customer}}</li>
                                </ul>
                                {{/each}}
                            </p>
                        </div>
                        <div class="modal-footer">
                            <div class="container d-flex justify-content-evenly">
                                <button type="button" class="btn btn-warning" data-bs-dismiss="modal">Close</button>
                            </div>
                        </div>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </div>
</div>